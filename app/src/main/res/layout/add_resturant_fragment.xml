<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/fbutton_color_silver">



    <LinearLayout
        android:background="@drawable/background"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <ImageView
            android:id="@+id/restaurantpic_imageview"
            android:layout_width="389dp"
            android:layout_height="154dp"
            app:srcCompat="@drawable/cheef" />

        <EditText
            android:id="@+id/restaurantpic_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter a URL"
            android:inputType="text"
            android:textColor="@color/fbutton_color_peter_river" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/editrestaurantname_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_restaurantname"
            android:hint="@string/name_of_the_restaurant"
            android:inputType="text"
            android:textColor="@color/fui_bgEmail"
            android:textColorHint="@android:color/holo_blue_bright"
            android:textSize="25sp"
            app:met_baseColor="@android:color/white"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@android:color/holo_red_light"
            app:met_singleLineEllipsis="true" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/editrestaurantadress_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_add_location"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:textColor="@android:color/holo_orange_dark"
            android:textColorHint="@android:color/holo_blue_bright"
            android:textSize="25sp"
            app:met_baseColor="@android:color/white"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="9"
            app:met_primaryColor="@android:color/holo_red_light"

            app:met_singleLineEllipsis="true" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/restaurantPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_local_phone_black_24dp"
            android:hint="Phone Number"
            android:inputType="textPhonetic"
            android:textColor="@android:color/holo_orange_dark"
            android:textColorHint="@android:color/holo_blue_bright"
            android:textSize="25sp"
            app:met_baseColor="@android:color/white"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="9"
            app:met_primaryColor="@android:color/holo_red_light"
            app:met_singleLineEllipsis="true" />


        <TextView
            android:id="@+id/resturantCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_subject_black_24dp"
            android:inputType="text"
            android:text="Category"
            android:textSize="25sp"
            app:met_baseColor="@android:color/white" />


        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnAddRest"
            style="@style/FirebaseUI.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/buttonshape"
            android:text="Add Resturant"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>