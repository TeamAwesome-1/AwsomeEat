<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"

    android:layout_marginTop="8dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/fbutton_color_alizarin"
    app:cardMaxElevation="@dimen/bottom_text_size"
    app:cardElevation="5dp"
    app:contentPadding="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/menu_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/fbutton_color_midnight_blue" />

        <TextView
            android:id="@+id/menu_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="#4f0e0d0e"
            android:fontFamily="@font/actor"
            android:gravity="center"
            android:text="Name of Menu"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/addNewDishButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="11dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="addNewDish"
            app:srcCompat="@drawable/fui_idp_button_background_email" />
    </RelativeLayout>
</android.support.v7.widget.CardView>